import threading,time,Queue,random

def Proudcer(name,que):
    que.put('baozi')
    print '%s 生产了一个包子' %(name)
    time.sleep(2)
def Consumer(name,que):
    que.get()
    print '%s 消费了一个包子' %(name)
    time.sleep(2)
    

que = Queue.Queue()
P1 = threading.Thread(target=Proudcer,args=(name, que))
P1.start()